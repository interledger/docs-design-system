---
interface Props {
  graph: string;
}

const { graph } = Astro.props;
---

<pre class="mermaid" set:html={graph} />

<style>
  pre.mermaid {
    background-color: transparent;
  }
</style>

<script>
  import mermaid from "/node_modules/mermaid/dist/mermaid.esm.min.mjs";
  mermaid.initialize({ startOnLoad: true });
</script>
